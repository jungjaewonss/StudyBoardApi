<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.board.mapper.BoardMapper">
	<select id="getListss" resultType="kr.board.entity.Board">
		select * from myboard
	</select>
	
	<insert id="insertBoard" parameterType="kr.board.entity.Board">
		insert into myboard 
			(
				title,
				content,
				writer
			)
		values(
			#{title},
			#{content},
			#{writer}		
		)
	</insert>
	
	<select id="detailBoard" parameterType="String" resultType="kr.board.entity.Board">
		select * from myboard
		where idx = #{value}
	</select>
	
	<delete id="boardDelete" parameterType="String">
		delete from myboard
		where idx = #{value}
	</delete>
	
	<update id="boardUpdate" parameterType="kr.board.entity.Board">
		update myboard set
			title = #{title},
			content = #{content}
		where idx = #{idx}	
	</update>
	
	<update id="addCount" parameterType="kr.board.entity.Board">
		update myboard set
			count = #{count} + 1
		where idx = #{idx}
	</update>
</mapper>